<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ips_sentry.ips"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.ips_sentry.ips.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- Adding the permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.ips_sentry.ips.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />


    <application
        android:name="com.ips_sentry.appdata.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ips_sentry.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ips_sentry.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2">

        </activity>

        <activity
            android:name="com.ips_sentry.NearByVenues2"
            android:label="@string/nearby_venues"
            android:parentActivityName="com.ips_sentry.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ips_sentry.MainActivity" />
        </activity>

        <activity
            android:name="com.ips_sentry.NearByVenuesDetails"
            android:label="@string/nearby_venues_details"
            android:parentActivityName="com.ips_sentry.NearByVenues"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ips_sentry.NearByVenues" />
        </activity>

        <activity
            android:name="com.ips_sentry.userview.AboutPage"
            android:label="@string/about"
            android:parentActivityName="com.ips_sentry.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ips_sentry.HomeActivity" />
        </activity>

        <activity
            android:name="com.ips_sentry.userview.SettingPreview"
            android:label="@string/setting_preview"
            android:parentActivityName="com.ips_sentry.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ips_sentry.HomeActivity" />
        </activity>

        <activity
            android:name="com.ips_sentry.WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name="com.ips_sentry.SettingActivity"
            android:label="@string/user_setting"
            android:parentActivityName="com.ips_sentry.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ips_sentry.MainActivity" />
        </activity>

        <activity android:name="com.ips_sentry.utils.DummyActivity"></activity>


        <service
            android:name="com.ips_sentry.service.MyService"
            android:enabled="true" />

        <service
            android:name="com.ips_sentry.service.MyServiceUpdate"
            android:enabled="true" />


        <receiver android:name="com.ips_sentry.receiver.BootCompletedIntentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBCY4ekfsMbuHBqB4cCSc4fA3M6YC3Isr4" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
